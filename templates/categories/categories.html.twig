{% extends 'base.html.twig' %}

{% block title %}Categories{% endblock %}

{% block body %}
    <h1>Categories:</h1>
    {% for message in app.flashes('error') %}
        <div class="alert alert-danger">{{ message }}</div>
    {% endfor %}
    <a class="btn btn-primary btn-bg float-right mb-2" href="{{ path('app_categoryAdd') }}">Add category</a>
    <table class="table table-hover">
        <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th></th>
        </tr>
        </thead>
        {% for category in categories %}
            <tr>
                <th>{{ category.id }}</th>
                <td>{{ category.name }}</td>
                <td class="text-right"><a class="btn btn-info btn-sm" href="{{ path('app_categoryEdit', { 'id': category.id }) }}">Edit</a>
                <a class="btn btn-danger btn-sm js-delete-btn" href="{{ path('app_categoryDelete', { 'id': category.id }) }}">Delete</a></td>
            </tr>
        {% endfor %}
    </table>
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <script>
        $(document).ready(function() {
            $('.js-delete-btn').on('click', function (e) {
                let name = $(this).parent().siblings('td')[0].innerHTML;
                return confirm('Are you sure you would like to delete category: ' + name + '?');
            });
        });
    </script>

{% endblock %}
